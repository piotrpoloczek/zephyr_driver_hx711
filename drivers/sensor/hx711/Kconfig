menuconfig HX711
    bool "HX711 Weight Scale Sensor"
    depends on GPIO
    help
      Enable driver for HX711 weight scale sensor

if HX711

config HX711_OFFSET
    int "Initial offset"
    default 0
    help
      Offset to subtract from raw ADC value

config HX711_GAIN
    int "Gain setting (1=A128, 2=B32, 3=A64)"
    default 1
    help
      HX711 gain: 1 = channel A gain 128x (default), 2 = channel B 32x, 3 = channel A 64x

endif
